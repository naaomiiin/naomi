$("#append-text").click(function(){

	$("#history").append('<div class="question_Box">'
			     +'<div class="question_image col-sm-3 text-left">'
			     +'<img src="./girl.png" alt="user">'+'</div>'
			     +'<div class="arrow_question col-sm-9">'+'<div id="history">'+'</div>'
			     +'<div>'+$("#input").val()+'<br>'+'<div>'+'</div>'+'</div>'+'</div>'+'</div>'
			     );
	$("#input").val("");
    });


